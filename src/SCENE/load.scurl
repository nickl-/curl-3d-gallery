{include
    "CustomSceneGraphic.scurl",
    "CustomScene.scurl",
    "CustomPolygonSet.scurl",
    "CustomSceneGroup.scurl",
    "CustomSceneGraphicEvent.scurl",
    "AnimationFillPatternListener.scurl"
}

{doc
    type = package,
    SCENE
    {purpose
        このパッケージは、シーンを提供します。
    }
}
