    {compiler-directives
        careful? = true
    },
    resource-directory = "../resources",
    translations-file = "messages.xml"
}

{import * from CURL.GUI.BASE}
{import * from CURL.GRAPHICS.SCENE}
{import * from CURL.GUI.DIALOGS}
{import * from CURL.GUI.STANDARD}

{import * from UTIL}
