{curl-file-attributes character-encoding = "shift-jis"}


|########################################################################################|
{doc-next
    {purpose  メニューラベル                                                           }
    {details {itemize
                 {item {code 解説}  ： 
                     コントロールパネルのラベル
                 }
                 {item {code 備考}  ： 特になし。          }
                 {item {code 環境}  ： Surge6.0            }
                 {item {code 新規}  ： 2008/08/31 尾松秀紀 
                     新規作成                              }
                 {item {code 変更}  ：                     }
                 {item {code V/R }  ： 01/01               }
                 {item {code Copyright(c)} SCS 2008        }
                 {item {code Author}： 株式会社ベーシック  }}}
}
|########################################################################################|
{define-class public MenuLabel {inherits Frame}
  
  
  |######################################################################################|
  {doc-next 
    {purpose メニューラベルのコンストラクタ                               }
    {details {itemize
                 {item {code 解説}  ： 
                     初期処理を行う。                                    }
                 {item {code 新規}  :  2008/08/31 尾松秀紀               }}}
    {parameter label, ラベル文字                                         }
  }
  |######################################################################################|
  {constructor public {default
                          label:String="",
                          ...}
    {construct-super
        halign = "center",
        valign = "center",
        width = {make-elastic},
        height = 5mm,
        border-width = 0pt,
        color = control-text-color,
        label,
        background = {manifest-url "image", "MenuLabel"}
    }
  }

  
  |######################################################################################|
  {doc-next 
    {purpose ラベル文字設定                                              }
    {details {itemize
                 {item {code 解説}  ： 
                     ラベルの文字を設定する。                            }
                 {item {code 新規}  :  2008/08/31 尾松秀紀               }}}
    {parameter label, ラベル文字                                         }
  }
  |######################################################################################|
  {method public {set-label
                     label:String}:void
    {self.add
        {value label},
        replace? = true}
  }
  
  
}
